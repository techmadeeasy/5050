<body>
    <%- include includes/navigation.ejs %>
    <section>
        <div class="container col-lg-4 col-md-7 mt-0 mt-md-2 p-0 d-flex justify-content-center">

            <div class="intro-container text-center">

                <a href="/user"> <img src="<%=user.picture%>" class="rounded-circle float-center" width="200"
                        height="200"> </a>
                <h2 class="text-center main-heading my-3"> <%=user.displayName%></h2>
                <h4 class="text-center">

                </h4>
                <div class="text-center bg-light mx-lg-n5 mx-md-n5 mx-0 my-3 p-4 rounded">
                    <p>Welcome to the 5050 Farmer advisory platform. From here you can <strong>Profile your farm for AI
                            driven insights</strong>,
                        and access a wide array of <strong>Farming Experts</strong> on demand through our <strong>Help
                            Center.</strong>
                    </p>
                </div>
            </div>
        </div>
    </section>

    <section>
        <div class="container col-8 col-lg-5">

            <a href="/profile/start" class="button mx-auto mt-3">
                Profiling
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                    <g data-name="Layer 2">
